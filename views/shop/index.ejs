<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
<div>
    <img src="https://cdn.glitch.global/c2f4eb20-0c18-41dc-a4a4-ff37f01ffe6f/Screen%20Shot%202022-07-06%20at%203.39.03%20PM.png?v=1657136353160" class="heroimg">
</div>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                            <a href="/products/<%= product._id %>" class="card card_hover">   <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                    </a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>